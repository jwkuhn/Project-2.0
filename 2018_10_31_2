	cout << "Enter the left bound of intervals:";
	cin >> InLeft;

	cout << "Enter the right bound of intervals: ";
	cin >> InRight;

	// Area Midpoint

	Area = (InRight - InLeft) / InN

		//Left Loop

		//Right Loop

		//Midpoint Loop


	int countL = 1
	do 
	{

		SumM = Area * pow((((1 / x) + (3 sin(x)) - 2) / InN), 2) + SumM;




			countL++;

	} while (countL <= InN)

		//Trapezoid Loop

		//Simpsons Aprox.

